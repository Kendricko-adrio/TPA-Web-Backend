type Post{
    postId: Int!
    userId: Int!
    gameId: Int!
    postType: PostType
    postTypeId: Int
    postHelpful: Boolean!
    postAsset: String!
    postDescription: String!
    postTitle: String!
    totalLike: Int!
    totalDislike: Int!
    likeDetail: [LikeDetail!]!
    commandDetail: [CommandDetail!]!
    CreatedAt: Time!
    UpdatedAt: Time!
    DeletedAt: Time
}


type PostType{
    postTypeId: Int!
    postTypeName: String!
}

extend type Query{
    getAllPost: [Post!]!
    getPost(postId: Int!): Post!
    getReviewByGameRecent(gameId: Int!): [Post!]!
    getReviewByGameUpvoted(gameId: Int!): [Post!]!
}

extend type Mutation {
    insertReview(review: String! helpful: Boolean! gameId: Int!): Post!
}